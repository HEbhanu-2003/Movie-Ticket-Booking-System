        <!-- Label Ticket Booking List -->

        <Label Content="Tiket Booking List" 
            Background="White"
            VerticalAlignment="Top"
            Margin="137,247,180,0" 
            FontSize="15" 
            Foreground="Black"
            FontStyle="Italic" 
            Height="28" 
            RenderTransformOrigin="0.262,-0.333" 
            FontFamily="Arial Black"/>

        <!-- DataGrid (Ticket Booking List) -->

