            Height="30" 
            RenderTransformOrigin="0.262,-0.333" 
            FontFamily="Arial Black" HorizontalAlignment="Left" Width="148"/>

        <!-- TextBox Income -->

        <Label x:Name="txt_Income" Content="" 
