            VerticalAlignment="Top" 
            Cursor="Hand"
            Height="30"
            Width="94"
            FontSize="18"
            Background="LightGray"
            Foreground="Black" 
            RenderTransformOrigin="0.25,0.5"
            FontFamily="Arial Black"
            Click="Delete"/>

        <!-- Button Reset All Data -->
        
        <Button Style="{DynamicResource RoundedButtonStyle}"
