            Content="Income" 
            HorizontalAlignment="Left"
            Margin="7,315,0,0" 
            VerticalAlignment="Top" 
            Cursor="Hand"
            Height="30"
            Width="92"
            FontSize="18"
            Background="LightGray"
            Foreground="Black" 
            RenderTransformOrigin="0.25,0.5"
            FontFamily="Arial Black"
