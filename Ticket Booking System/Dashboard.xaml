        </DataGrid>

        <!-- DataGrid (Payment List) -->

        <DataGrid 
            x:Name="DataGrid2" 
            SelectionChanged="DataGrid_SelectionChanged" 
            Margin="135,531,17,56" 
            Cursor="Hand" 
            FontFamily="Arial Black"
            Background="FloralWhite">


            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
