        <!-- Label Registration List-->

        <Label Content="Registration List" 
            Background="White"
            VerticalAlignment="Top"
            Margin="139,120,177,0" 
            FontSize="15" 
            Foreground="Black"
            FontStyle="Italic" 
            Height="27" 
            RenderTransformOrigin="0.262,-0.333" 
            FontFamily="Arial Black"/>

        <!-- Button Clear -->

