<!-- Payment Page-->

<Window x:Class="Ticket_Booking_System.Payments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket_Booking_System"
        mc:Ignorable="d"
        Title="Payments" Height="699" Width="493" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="FloralWhite">

    <!-- Button Style-->

    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="11" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true" Width="71">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#EAB01E"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#EAB01E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#F1CA68"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#F1CA68"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <!-- Label Page Payment Process-->


        <Label Content="Payment Process" 
            Background="Red"
            VerticalAlignment="Top"
            Margin="155,7,138,0" 
            FontSize="18" 
            Foreground="White"
            FontStyle="Italic" Height="30"
            FontFamily="Arial Black" 
            RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.408"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

        <!-- Label Personal Information-->

        <Label Content="Personal Information" 
            Background="FloralWhite"
            VerticalAlignment="Top"
            Margin="123,109,97,0" 
            FontSize="20" 
            Foreground="Black"
            FontStyle="Italic" Height="30"
            FontFamily="Arial Black" 
            RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.408"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

        <!-- TextBlock ID-->

        <TextBlock
           
            Text="ID"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="62,150,390,517"/>

        <!-- TextBox ID-->

        <TextBox x:Name="txt_Id" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="59,168,248,488"
            Padding="45,0,0,0" IsReadOnly="True" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/id_txt2.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>

        <!-- TextBlock Email-->


        <TextBlock
            Text="Email"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="19,232,412,435"/>

        <!-- TextBox Email-->

        <TextBox x:Name="txt_Email" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="11,250,258,406"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/email_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- TextBlock Mobile No-->

        <TextBlock
            Text="Mobile No"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="254,233,143,434"/>

        <!-- TextBox Mobile Number-->

        <TextBox x:Name="txt_MobileNumber" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="253,251,16,405"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Mobile_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- Lable Card Information-->

        <Label Content="Card Information" 
            Background="FloralWhite"
            VerticalAlignment="Top"
            Margin="147,338,118,0" 
            FontSize="20" 
            Foreground="Black"
            FontStyle="Italic" Height="30"
            FontFamily="Arial Black" 
            RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial Black">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.277"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

        <!-- TextBlock Card Number-->

        <TextBlock
            Text="Card Number"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="17,397,354,270"/>

        <!-- TextBox Card Number-->

        <TextBox x:Name="txt_CardNumber" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="16,415,253,241"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Card_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- TextBlock Country Of Origin-->


        <TextBlock
            Text="Country Of Origin"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="263,393,64,274"/>

        <!-- TextBox Country Of Origin-->


        <TextBox x:Name="txt_CountryOfOrigin" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="262,416,7,240"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/country_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- TextBlock Expire Date-->

        <TextBlock
            Text="Expire Date"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="18,489,353,178"/>

        <!-- TextBox Expire Date-->

        <TextBox x:Name="txt_ExpireDate" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="17,507,252,149"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Expire_card_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>

        <!-- TextBlock CVC-->

        <TextBlock
            Text="CVC"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="261,490,110,177"/>

        <!-- TextBox CVC-->

        <TextBox x:Name="txt_CVC" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="260,508,9,148"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Cvv_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- TextBlock Branch Name-->

        <TextBlock
            Text="Branch Name"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="19,567,347,100"/>


        <!-- TextBox Branch Name-->


        <TextBox x:Name="txt_BankName" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Montserrat"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="18,585,251,71"
            Padding="45,0,0,0" TextBlock.FontFamily="Arial Black">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Bank_txt.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>


        <!-- Button Payment-->

        <Button Style="{DynamicResource RoundedButtonStyle}" 
                Content="Payment" 
                HorizontalAlignment="Left" 
                Margin="103,644,0,0" 
                VerticalAlignment="Top"
                Height="32"
                Width="113"
                Cursor="Hand"
                Background="Red"
                Foreground="White"
                FontStyle="Normal"
                FontFamily="Arial Black"
                FontSize="13"
                Click="Pay" RenderTransformOrigin="-0.381,0.542"/>

        <!-- Button Clear-->

        <Button Style="{DynamicResource RoundedButtonStyle}" 
                Content="Clear" 
                HorizontalAlignment="Left" 
                Margin="312,644,0,0" 
                VerticalAlignment="Top"
                Height="32"
                Width="113"
                Cursor="Hand"
                Background="Red"
                Foreground="White"
                FontStyle="Normal"
                FontFamily="Arial Black"
                FontSize="13"
                Click="Clear" RenderTransformOrigin="-0.381,0.542"/>

        <!-- Card Payment Image -->

        <Image HorizontalAlignment="Left" 
            Height="79" 
            Margin="208,38,0,0" 
            VerticalAlignment="Top"
            Width="85" 
            RenderTransformOrigin="0.94,0.456"
            Source="/Images/card_payment.png"/>

        <!-- TextBlock Full Total -->
        
        <TextBlock
           
            Text="Full Total"
            Foreground="Black"
            FontSize="15"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Margin="277,147,114,525" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.737"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- TextBox Final Bill -->

        <TextBox x:Name="txt_final_bill" 
            FontSize="16"
            FontWeight="Medium"
            FontFamily="Arial Black"
            Foreground="Black"
            CaretBrush="Black"
            BorderBrush="Black"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="268,169,39,487"
            Padding="45,0,0,0" IsReadOnly="True" TextBlock.FontFamily="Arial Black" TextChanged="txt_final_bill_TextChanged">

            <TextBox.Background>
                <ImageBrush ImageSource="/Images/Final_biil.png"
                    Stretch="None"
                    AlignmentX="Left"/>
            </TextBox.Background>

        </TextBox>

    </Grid>
</Window>
